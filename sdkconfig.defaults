# 8x8 Crawler Controller defaults

# Use custom partition table
CONFIG_PARTITION_TABLE_CUSTOM=y
CONFIG_PARTITION_TABLE_CUSTOM_FILENAME="partitions.csv"

# Enable HTTP server WebSocket support
CONFIG_HTTPD_WS_SUPPORT=y

# RC Input pins
CONFIG_RC_THROTTLE_GPIO=34
CONFIG_RC_STEERING_GPIO=35
CONFIG_RC_AUX1_GPIO=32
CONFIG_RC_AUX2_GPIO=33

# Output pins
CONFIG_ESC_GPIO=18
CONFIG_SERVO_FRONT_L_GPIO=19
CONFIG_SERVO_FRONT_R_GPIO=21
CONFIG_SERVO_REAR_L_GPIO=22
CONFIG_SERVO_REAR_R_GPIO=23

# Signal parameters
CONFIG_RC_SIGNAL_TIMEOUT_MS=250
CONFIG_DEFAULT_DEADZONE_US=20